<view class="all">
  <view>
    <image class="img" src="/images/type/lastList.png" />
  </view>
  
  <view class="main ">
    <scroll-view scroll-y="true" style="height:100%">
      <view class="item_view" wx:for="{{feedbackList}}" data-key="{{item.feedbackId}}" bindtap="detail">
        <view class="askView">
          <view>
            <image class="txImg" src="/images/type/ask.png" />
          </view>
          <view class="f16 f_w ask_tx">
            {{item.opinion}}
          </view>
        </view>
        
        <block wx:if="{{item.reply!=null}}">
          <view class="answerView">
            <view>
              <image class="txImg" src="/images/type/answer.png" />
            </view>
            <view class="f15 answer_tx">
              {{item.reply}}
            </view>
          </view>
        </block>
      </view>

      <block wx:if="{{feedbackList.length==0}}">
        <view class='center' style='padding-top:30%'>
          <image src='/images/index/no_log.png' mode="widthFix" style="width:40%" />
          <view class='line color4 f14'>暂无记录</view>
        </view>
      </block>

    </scroll-view>
  </view>

</view>

<view bindtap="toAdvise">
  <button class="btn bgColor f16">去提意见</button>
</view>