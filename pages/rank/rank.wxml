<view class="main">
  <image src="/images/rank/bg.jpg" class="bgImg" />
</view>
<view class="tab-h f15">
  <view class="color4 tab-item {{currentTab==0?'active':''}} f16" data-current="0" bindtap="swichNav">本周排行榜</view>
  <view class="color4 tab-item {{currentTab==1?'active':''}} f16" data-current="1" bindtap="swichNav">本月排行榜</view>
  <view class="color4 tab-item {{currentTab==2?'active':''}} f16" data-current="2" bindtap="swichNav">本年排行榜</view>
</view>

<view>
  <view class="title_view">
    <view class="f15">排名</view>
    <view class="score_tx">
      <image src="/images/rank/recycle.png" class="img1" />
      <view class="f15 pl20">环保积分</view>
    </view>
  </view>

  <scroll-view class="scrollView" scroll-y="true">
    <block wx:if="{{currentTab==0}}">
      <view class="item_view" wx:for="{{weekList}}" wx:for-index="i">
        <view class="left_view">
          <view>
            <image class="noImg" src="/images/rank/rank1.png" wx:if="{{i==0}}" />
            <image class="noImg" src="/images/rank/rank2.png" wx:if="{{i==1}}" />
            <image class="noImg" src="/images/rank/rank3.png" wx:if="{{i==2}}" />
            <view class="other" wx:if="{{i>2}}">{{i+1}}</view>
          </view>
          <view class="pl20">
            <block wx:if="{{item.avatar==''}}">
              <image class="img2" src="/images/rank/avator.png" />
            </block>
            <block wx:else>
              <image class="img2" src="{{item.avatar}}" />
            </block>
          </view>
          <view class="info_view pl20">
            <text class="f14">{{item.nickname}}</text>
            <!-- <text class="f12 color4" wx:if="{{item.address!=null}}">{{item.address}}</text> -->
          </view>
        </view>

        <view class="f16 color3">
          {{item.score}}
        </view>
      </view>
    </block>

    <block wx:if="{{currentTab==1}}">
      <view wx:for="{{monthList}}" wx:for-index="i">
        <view class="item_view">
          <view class="left_view">
            <view>
              <image class="noImg" src="/images/rank/rank1.png" wx:if="{{i==0}}" />
              <image class="noImg" src="/images/rank/rank2.png" wx:if="{{i==1}}" />
              <image class="noImg" src="/images/rank/rank3.png" wx:if="{{i==2}}" />
              <view class="other" wx:if="{{i>2}}">{{i+1}}</view>
            </view>
            <view class="pl20">
              <image class="img2" src="{{item.avatar}}" />
            </view>
            <view class="info_view pl20">
              <text class="f14">{{item.nickname}}</text>
              <!-- <text class="f12 color4" wx:if="{{item.address!=null}}">{{item.address}}</text> -->
            </view>
          </view>

          <view class="f16 color3">
            {{item.score}}
          </view>
        </view>
      </view>
    </block>

    <block wx:if="{{currentTab==2}}">
      <view class="item_view" wx:for="{{yearList}}" wx:for-index="i">
        <view class="left_view">
          <view>
            <image class="noImg" src="/images/rank/rank1.png" wx:if="{{i==0}}" />
            <image class="noImg" src="/images/rank/rank2.png" wx:if="{{i==1}}" />
            <image class="noImg" src="/images/rank/rank3.png" wx:if="{{i==2}}" />
            <view class="other" wx:if="{{i>2}}">{{i+1}}</view>
          </view>
          <view class="pl20">
            <image class="img2" src="{{item.avatar}}" />
          </view>
          <view class="info_view pl20">
            <text class="f14">{{item.nickname}}</text>
            <!-- <text class="f12 color4" wx:if="{{item.address!=null}}">{{item.address}}</text> -->
          </view>
        </view>

        <view class="f16 color3">
          {{item.score}}
        </view>
      </view>
    </block>
  </scroll-view>

</view>


<!-- <view style="height:80%">
  <web-view src="{{url}}{{rankUrl}}"></web-view>
</view> -->

<!-- 底部导航 -->
<view class="tabbar_box"
  style="background-color:{{tabbar.backgroundColor}}; border-top-color:{{tabbar.borderStyle}}; {{tabbar.position == 'top' ? 'top:0' : 'bottom:0'}}">
  <block wx:for="{{tabbar.list}}" wx:for-item="item" wx:key="index">
    <navigator class="tabbar_nav" url="{{item.pagePath}}"
      style="width:{{1/tabbar.list.length*100}}%; color:{{item.selected ? tabbar.selectedColor : tabbar.color}}"
      open-type="redirect" hover-class="none">
      <image class="tabbar_icon" src="{{item.selected ? item.selectedIconPath : item.iconPath}}" />
      <text>{{item.text}}</text>
    </navigator>
  </block>
</view>